<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MidiConfigPicker">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">end</item>
        <item name="np_fadingEdgeEnabled">false</item>
        <item name="np_dividerColor">@android:color/transparent</item>
        <item name="np_selectedTextColor">@color/colorAccent</item>
        <item name="np_textColor">@color/colorPrimaryDark</item>
        <item name="np_selectedTextSize">15sp</item>
        <item name="np_textSize">14sp</item>
    </style>

    <style name="MidiConfigTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:lines">1</item>
        <item name="fontFamily">@font/ubuntu_light</item>
    </style>

    <style name="InstrumentConfigTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/horizontal_margin</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/horizontal_margin</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/ubuntu_light</item>

    </style>
</resources>
